<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping 
			PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.tjnu.po.Ppt" table="ppt_tb"><!-- 每个class对应一个持久化对象 -->
		<id name="pptId" ><!-- id元素用来定义主键标识,并指定主键生成策略 -->
			<generator class="increment"/>
		</id>
		<property name="pptName"/><!-- 映射Theme属性 -->
		<property name="pptDetail"/><!-- 映射Theme属性 -->
		<property name="pptSourceUrl"/><!-- 映射Theme属性 -->

	</class>
</hibernate-mapping>